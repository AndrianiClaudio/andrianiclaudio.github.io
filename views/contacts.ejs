<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contacts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-4">
    <h1>Contacts for <%= user.name %>
    </h1>

    <!-- Download CSV Button -->
    <a href="/download-csv" class="btn btn-success mb-3">Download CSV</a>

    <% // Render tables for each source %>
      <% for (const [source, contacts] of Object.entries(contactsBySource)) { %>
        <h2>
          <%= source %>
        </h2> <!-- Title for the table based on the source -->
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Website Name</th>
                <th>Email</th>
                <th>Phone</th>
              </tr>
            </thead>
            <tbody>
              <% contacts.forEach(contact=> { %>
                <tr>
                  <td>
                    <%= contact['Nome Sito'] %>
                  </td>
                  <td>
                    <%= contact.Email %>
                  </td>
                  <td>
                    <%= contact.Telefono %>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
        <% } %>
  </div>
</body>

</html>